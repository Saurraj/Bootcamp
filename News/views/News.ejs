        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/news/business"
              >Business</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/news/entertainment"
              >Entertainment</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/news/general"
              >General</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/news/health"
              >Health</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/news/science"
              >Science</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/news/sports"
              >Sports</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/news/technology"
              >Technology</a
            >
          </li>
        </ul>
      </div>
    </nav>
    <div class="container my-5">
      <div class="row my-5">
        <% articles.forEach(function(article) { %>
        <div class="col-md-4">
          <div class="card m-5" style="width: 100%">
            <p class="card-text">
              <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <%= article.source.name %>
              </span>
            </p>
            <% if (article.urlToImage) { %>
            <img
              src="<%= article.urlToImage %>"
              class="card-img-top"
              alt="Image"
            />
            <% } else { %>
            <img
              src="https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg?20200913095930"
              class="card-img-top"
              alt="Image"
            />

            <% } %>
            <div class="card-body">

              <% if (article.title) { %>
              <h5 class="card-title">
                <a href="<%= article.url %>"><%= article.title %></a>
              </h5>
              <% } %> <% if (article.description) { %>
              <p class="card-text"><%= article.description %></p>
              <% } %> <% if (article.author) { %>
              <p class="card-text">
                <strong>Author:</strong>
                <a href="<%= article.author %>"><%= article.author %></a>
              </p>
              <% } %> <% if (article.publishedAt) { %>
              <p class="card-text">
                <strong>Published:</strong> <%= formatDate(article.publishedAt)
                %>
              </p>
              <% } %>

              <!-- <a href="<%= article.url %>" class="btn btn-primary">Read more</a> -->
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
